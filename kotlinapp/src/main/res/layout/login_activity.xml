<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:orientation="vertical"
    android:padding="@dimen/dimens_16dp">


    <com.cartenz.design.TextLayout.CustomTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:hint="Email"
        android:orientation="vertical"
        app:errorBackgroundColor="@color/white_1"
        app:errorEnabled="true">

        <com.cartenz.design.TextLayout.CustomTextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:units="\@gmail.com" />

    </com.cartenz.design.TextLayout.CustomTextInputLayout>

    <com.cartenz.design.TextLayout.CustomTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:hint="Password"
        android:orientation="vertical"
        app:errorBackgroundColor="@color/white_1"
        app:errorEnabled="true"
        app:errorTextColor="@color/red_1"
        app:passwordToggleEnabled="true">

        <com.cartenz.design.TextLayout.CustomTextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true" />

    </com.cartenz.design.TextLayout.CustomTextInputLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:text="login" />


</LinearLayout>


