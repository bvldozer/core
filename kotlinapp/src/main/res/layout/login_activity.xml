<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:orientation="vertical"
    android:padding="@dimen/dimens_16dp">

    <com.cartenz.design.textlayout.CustomInputLayout
        android:id="@+id/et_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnable="true"
        app:hint="test"
        app:units="mail.com" />

    <com.cartenz.design.textlayout.CustomInputLayout
        android:id="@+id/sp_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnable="true"
        app:hint="test"
        app:isSpinner="true" />


    <com.cartenz.design.textlayout.CustomTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:hint="Email"
        android:orientation="vertical"
        app:errorBackgroundColor="@color/white_1"
        app:errorEnabled="true">

        <com.cartenz.design.textlayout.CustomTextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:units="\@gmail.com" />

    </com.cartenz.design.textlayout.CustomTextInputLayout>

    <com.cartenz.design.textlayout.CustomTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:hint="Password"
        android:orientation="vertical"
        app:errorBackgroundColor="@color/white_1"
        app:errorEnabled="true"
        app:errorTextColor="@color/red_1"
        app:passwordToggleEnabled="true">

        <com.cartenz.design.textlayout.CustomTextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true" />

    </com.cartenz.design.textlayout.CustomTextInputLayout>


    <com.cartenz.design.textlayout.CustomTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:hint="Spinner"
        android:orientation="vertical"
        app:errorBackgroundColor="@color/white_1"
        app:errorEnabled="true"
        app:errorTextColor="@color/red_1">

        <com.cartenz.design.textlayout.CustomSpinner
            android:id="@+id/sp_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </com.cartenz.design.textlayout.CustomTextInputLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/CartenzButton.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:text="login" />


    <RelativeLayout
        android:layout_width="@dimen/dimens_64dp"
        android:layout_height="@dimen/dimens_64dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:background="@drawable/selector_squircle"
        android:clickable="true">

        <ImageView
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_android_black_24dp" />
    </RelativeLayout>

</LinearLayout>


