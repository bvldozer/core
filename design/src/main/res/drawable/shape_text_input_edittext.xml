<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="-20dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fafafa" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:left="-4dp" android:right="-4dp" android:top="-4dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="#2196f3" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_focused="true" android:state_window_focused="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="-20dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fafafa" />

                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item android:left="-8dp" android:right="-8dp" android:top="-8dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="#D3D3D3" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_focused="false" android:state_window_focused="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="-20dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fafafa" />

                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item android:left="-8dp" android:right="-8dp" android:top="-8dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="#D8D8D8" />
                </shape>
            </item>

        </layer-list>
    </item>


</selector>