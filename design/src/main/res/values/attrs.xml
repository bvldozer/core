<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>


    <declare-styleable name="CustomInputLayout">
        <attr name="errorBackgroundColor" format="color" />
        <attr name="errorTextColor" format="color" />
        <attr name="errorEnable" format="boolean" />
        <attr name="isSpinner" format="boolean" />
        <attr name="error" format="string" />
        <attr name="hint" format="string" />
        <attr name="units" format="string" />
        <attr name="unitsTextColor" format="color" />
    </declare-styleable>



    <declare-styleable name="ImageViewMeasurement">
        <attr name="width_divider" format="integer" />
        <attr name="height_divider" format="integer" />
        <attr name="measure_with_height" format="boolean" />
    </declare-styleable>
</resources>