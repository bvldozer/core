<resources>

    <!-- Base application theme. -->
    <style name="TaxCoreTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>


    <style name="BaseSpinner">
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomButton.Blue">
        <item name="android:background">@drawable/shape_square_rounded_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CustomButton.Orange">
        <item name="android:background">@drawable/shape_square_rounded_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CustomButton.White">
        <item name="android:background">@drawable/shape_square_rounded_white</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CustomEditTextBox" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:paddingTop">@dimen/dimens_8dp</item>
    </style>

    <style name="CustomTextInputEditText" parent="CustomEditTextBox">
        <item name="android:background">@drawable/shape_text_input_edittext</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:padding">@dimen/dimens_8dp</item>
    </style>


</resources>
